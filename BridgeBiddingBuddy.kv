#:kivy 1.11.1
<Manager>:
    id: screen_manager

    biddingScreen: biddingScreen
    specificationScreen: specificationScreen

    BiddingScreen:
        id: biddingScreen
        name: 'bidding'
        manager: screen_manager

    SpecificationScreen:
        id: specificationScreen
        name: 'specification'
        manager: screen_manager
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "What is the highest color?"
                    width: 100
                    height: 40
                    size_hint: (None, None)
                ToggleButton:
                    group: 'highestColor'
                    text: 'K'
                ToggleButton:
                    group: 'highestColor'
                    text: 'â™¦'
                ToggleButton:
                    group: 'highestColor'
                    text: 'H'
                ToggleButton:
                    group: 'highestColor'
                    text: 'S'
            Button:
                text: 'Return to bidding'
                height: 40
                size_hint: (1.0, None)

                on_press: 
                    root.transition.direction = 'right'
                    root.switch_to(root.biddingScreen)

<ToggleButton>:
    height: 40
    size_hint: (1.0, None)
    font_name: "./consola.ttf"
